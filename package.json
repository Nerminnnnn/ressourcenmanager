{
  "name": "ressourcenmanager",
  "version": "1.0.0",
  "description": "Ressourcenmanager - Item Management Application",
  "scripts": {
    "install": "npm run install:frontend && npm run install:backend:optional",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "mvn clean install -DskipTests",
    "install:backend:optional": "mvn clean install -DskipTests || echo 'Maven nicht verfügbar - Backend wird übersprungen'",
    "dev": "concurrently \"npm run dev:backend:optional\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "mvn spring-boot:run",
    "dev:backend:optional": "mvn spring-boot:run || echo 'Maven nicht verfügbar - starte nur Frontend'",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "mvn clean package -DskipTests",
    "start": "npm run dev",
    "test": "npm run test:frontend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "mvn test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "ressourcenmanager",
    "item-management",
    "react",
    "spring-boot",
    "java"
  ],
  "author": "Ressourcenmanager Team",
  "license": "MIT"
}
